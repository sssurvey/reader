<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGray</item>
        <item name="colorPrimaryDark">@color/default_text</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Specify no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Specify navigation bar color -->
        <item name="android:navigationBarColor">@color/default_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Specify notification bar color -->
        <item name="android:statusBarColor">@color/default_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:textViewStyle">@style/ReaderTextViewStyle</item>
        <!-- Disable the yellow auto fill highlights-->
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>

    <style name="ReaderEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="ReaderTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="ReaderArticleTitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="ReaderArticlePostTimeTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/default_text_light</item>
    </style>

    <style name="ReaderToolbarTitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="ReaderButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/font_regular</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/default_background</item>
        <item name="titleTextColor">@color/lightGray</item>
    </style>

    <style name="ReaderPreference" parent="Preference">
        <item name="android:windowBackground">@color/default_background</item>
        <item name="android:background">@color/default_background</item>
    </style>

    <style name="ReaderCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/default_background</item>
    </style>

    <style name="ReaderSplashArtStroke" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
