<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/medium_padding"
    android:paddingTop="@dimen/small_padding"
    android:paddingEnd="@dimen/medium_padding"
    android:paddingBottom="@dimen/small_padding">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/article_image_preview"
        android:layout_width="@dimen/reader_article_item_image_layout_size"
        android:layout_height="@dimen/reader_article_item_image_layout_size"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/default_image_view_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/placeholder_picture"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/placeholder_picture" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:fontFamily="@font/font_avenir_heavy"
        android:maxLines="3"
        android:text="Sample Article Headline for The Sample Image Right Here, I Don't Know What I am Talking About."
        android:textColor="@color/reader_article_item_title"
        android:textSize="@dimen/reader_article_item_title_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/article_image_preview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sample Article Headline for The Sample Image Right Here, I Don't Know What I am Talking About." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/article_source_icon"
        android:layout_width="@dimen/reader_article_item_source_icon_layout_size"
        android:layout_height="@dimen/reader_article_item_source_icon_layout_size"
        android:layout_marginStart="@dimen/medium_margin"
        android:scaleType="fitCenter"
        android:src="@mipmap/placeholder_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/article_image_preview" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:fontFamily="@font/font_avenir_heavy"
        android:maxLines="1"
        android:text="2 hours"
        android:textColor="@color/reader_article_item_foot_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/article_source_icon"
        app:layout_constraintTop_toTopOf="@+id/article_source_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>